<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:elevation="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кульшин Роман"
        style="@style/text_blue_bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_bold"
        android:textColor="@color/gray"
        android:text="19:44"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        style="@style/text_gray_demi"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Статус вашего предложения изменен на: идет опытное тестирование Статус вашего предложения изменен на: идет опытное тестирование Статус вашего предложения изменен на: идет опытное тестирование"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>









